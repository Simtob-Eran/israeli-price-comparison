# =============================================================================
# Price Comparison Application - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values:
#   cp .env.example .env
#
# IMPORTANT: Never commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# OpenAI Configuration
# -----------------------------------------------------------------------------
# Your OpenAI API key (required)
# Get it from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Model to use (optional, defaults to gpt-4-turbo-preview)
OPENAI_MODEL=gpt-4-turbo-preview

# Temperature for LLM responses (optional, defaults to 0)
OPENAI_TEMPERATURE=0

# Maximum tokens per request (optional, defaults to 4096)
OPENAI_MAX_TOKENS=4096

# Request timeout in seconds (optional, defaults to 60)
OPENAI_REQUEST_TIMEOUT=60

# -----------------------------------------------------------------------------
# MCP (Model Context Protocol) Server Configuration
# -----------------------------------------------------------------------------
# URL of your MCP server (required for web search/scraping tools)
MCP_SERVER_URL=http://localhost:8000/mcp

# MCP request timeout in seconds (optional, defaults to 30)
MCP_TIMEOUT=30

# Number of retry attempts for MCP calls (optional, defaults to 3)
MCP_RETRY_ATTEMPTS=3

# Delay between retries in seconds (optional, defaults to 1.0)
MCP_RETRY_DELAY=1.0

# -----------------------------------------------------------------------------
# Serper API Configuration (for Google Search)
# -----------------------------------------------------------------------------
# Your Serper API key (optional, used for web search)
# Get it from: https://serper.dev/
SERPER_API_KEY=your-serper-api-key-here

# Number of results per search (optional, defaults to 20)
SERPER_RESULTS_PER_SEARCH=20

# Country code for search results (optional, defaults to "il" for Israel)
SERPER_COUNTRY=il

# Language for search results (optional, defaults to "he" for Hebrew)
SERPER_LANGUAGE=he

# -----------------------------------------------------------------------------
# Agent Configuration
# -----------------------------------------------------------------------------
# Maximum retry attempts for agents (optional, defaults to 3)
AGENT_MAX_RETRIES=3

# Agent timeout in seconds (optional, defaults to 120)
AGENT_TIMEOUT=120

# Minimum relevance score for validation (optional, defaults to 70)
VALIDATION_MIN_RELEVANCE_SCORE=70

# -----------------------------------------------------------------------------
# Web Scraping Configuration
# -----------------------------------------------------------------------------
# Number of concurrent scraping requests (optional, defaults to 5)
SCRAPING_CONCURRENT_REQUESTS=5

# Delay between requests in seconds (optional, defaults to 1.0)
SCRAPING_RATE_LIMIT_DELAY=1.0

# Request timeout in seconds (optional, defaults to 15)
SCRAPING_TIMEOUT=15

# Maximum page size in bytes (optional, defaults to 5MB)
SCRAPING_MAX_PAGE_SIZE=5242880

# User agent string (optional)
SCRAPING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# -----------------------------------------------------------------------------
# Workflow Configuration
# -----------------------------------------------------------------------------
# Minimum URLs required before extraction (optional, defaults to 5)
WORKFLOW_MIN_URLS=5

# Minimum prices required for validation (optional, defaults to 3)
WORKFLOW_MIN_PRICES=3

# Maximum search retry attempts (optional, defaults to 2)
WORKFLOW_MAX_SEARCH_RETRIES=2

# Enable workflow checkpointing (optional, defaults to true)
WORKFLOW_CHECKPOINT_ENABLED=true

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (optional, defaults to INFO)
LOG_LEVEL=INFO

# Log format: "structured" for JSON, "plain" for readable (optional, defaults to structured)
LOG_FORMAT=plain

# Log file path (optional, leave empty for console only)
LOG_FILE=
